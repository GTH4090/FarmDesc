<Page x:Class="FarmDesc.Pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FarmDesc.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="AvargeBtn" Content="Среднее значения датчиков" Width="Auto" Click="AvargeBtn_Click"/>
            <Button x:Name="SensorsControlBtn" Content="Контроль датчитков" Width="Auto" Click="SensorsControlBtn_Click"/>
            <Button x:Name="WinControlBtn" Content="Контроль форточки" Width="Auto" Click="WinControlBtn_Click"/>
            <Button x:Name="WateringControl" Content="Контроль полива" Width="Auto" Click="WateringControl_Click"/>
            <Button x:Name="GeneralWetControll" Content="контроль общей влажности" Width="Auto" Click="GeneralWetControll_Click"/>
        </StackPanel>
    </Grid>
</Page>
