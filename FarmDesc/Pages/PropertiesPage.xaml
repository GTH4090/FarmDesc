<Page x:Class="FarmDesc.Pages.PropertiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FarmDesc.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WinControlPage" Loaded="Page_Loaded">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Температура"/>
                <TextBox x:Name="TempTbx"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Влажность воздуха" Width="Auto"/>
                <TextBox x:Name="AirHumTbx"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Влажность почвы" Width="Auto"/>
                <TextBox x:Name="LandHumTbx"/>
            </StackPanel>
            <Button x:Name="SaveBtn" Content="Сохранить" Click="SaveBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
